{
  "name": "route-imperator",
  "description": "Divide et impera. Organize declarative routes in an imperative way for trie, radix or prefix routers",
  "version": "1.0.1",
  "author": "Javier Garcia <javiertury@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/javiertury/route-imperator.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.1",
    "@commitlint/config-conventional": "^7.3.1",
    "chai": "^4.2.0",
    "eslint": "^5.12.0",
    "eslint-plugin-mocha": "^5.2.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0"
  },
  "keywords": [
    "router",
    "route",
    "trie",
    "radix",
    "prefix",
    "declare",
    "imperative",
    "orthogonal",
    "koa"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "test": "mocha --globals setImmediate,clearImmediate --ui tdd --exit --check-leaks --colors -t 30000 --reporter spec \"test/**/*.test.js\""
  }
}
